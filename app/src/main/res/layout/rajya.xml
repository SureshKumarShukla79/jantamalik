<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:context="in.filternet.jantamalik.Kendra.VoteMP">

        <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <Spinner
            android:id="@+id/state_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/state_text"
            android:layout_toRightOf="@id/state_text"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/constituency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/constitunecy_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:layout_below="@id/state_text"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="35dp" />

        <Spinner
            android:id="@+id/MP_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:paddingTop="5dp"
            android:layout_alignTop="@+id/constituency_text"
            android:layout_toRightOf="@id/constituency_text" />

        <android.support.v7.widget.CardView
            android:id="@+id/voteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/constituency_text"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="3dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="40dp"
                    android:text="@string/Vote" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom">

                    <ImageButton
                        android:id="@+id/vote1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:src="@drawable/vote" />

                    <TextView
                        android:id="@+id/vote2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:gravity="left|bottom"
                        android:layout_weight="1.00"
                        android:padding="10dp"
                        android:text="@string/MLA"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <ImageButton
                        android:id="@+id/vote3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:src="@drawable/right_black_arrow_24dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/noteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/voteCard"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="40dp"
                    android:text="@string/Money" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom">

                    <ImageButton
                        android:id="@+id/note1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:src="@drawable/note" />

                    <TextView
                        android:id="@+id/note2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:gravity="left|bottom"
                        android:layout_weight="1.00"
                        android:padding="10dp"
                        android:text="@string/rajya_budget"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <ImageButton
                        android:id="@+id/note3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:src="@drawable/right_black_arrow_24dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/infographics_cardView"
            android:layout_width="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/noteCard"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/rights" />
                <TextView
                    android:id="@+id/govt1"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1.00"
                    android:padding="12dp"
                    android:text="@string/democracy"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/govt2"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|end"
                    android:src="@drawable/right_black_arrow_24dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_below="@id/infographics_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/subjectCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="40dp"
                        android:text="@string/State_Subjects" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom">

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/recyclerview_item_click_effect"
                            android:src="@drawable/responsibility" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:background="@drawable/recyclerview_item_click_effect"
                            android:gravity="left|bottom"
                            android:layout_weight="1.00"
                            android:padding="10dp"
                            android:text="@string/rajya_subjects"
                            android:textColor="@color/black"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</ScrollView>