                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/agricultural_loan" />

                <TextView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_weight="1.0"
                    android:text="@string/agriculture_loan"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/red_arrow" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="3dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/price_realization_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/price_realization" />

                <TextView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_weight="1.0"
                    android:text="@string/price_realization"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/red_arrow" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="3dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/agriculture_seed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/agriculture_subsidy" />

                <TextView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_weight="1.0"
                    android:text="@string/agriculture_subsidy"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/red_arrow" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/mla_no_response_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/mp_no_response" />

            <TextView
                android:background="@drawable/recyclerview_item_click_effect"
                android:id="@+id/issue_mla_no_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:text="@string/mla_no_response"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:background="@drawable/recyclerview_item_click_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/red_arrow" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/road_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/poor_road" />

            <TextView
                android:background="@drawable/recyclerview_item_click_effect"
                android:id="@+id/road"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:text="@string/poor_road"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:background="@drawable/recyclerview_item_click_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/red_arrow" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="3dp"
        android:visibility="gone">

            <LinearLayout
                android:id="@+id/public_transport_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/public_transport" />

                <TextView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_weight="1.0"
                    android:text="@string/public_transport"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/red_arrow" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/traffic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/traffic" />

            <TextView
                android:background="@drawable/recyclerview_item_click_effect"
                android:id="@+id/traffic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:text="@string/traffic"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:background="@drawable/recyclerview_item_click_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/red_arrow" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/electricity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/electricity" />

            <TextView
                android:background="@drawable/recyclerview_item_click_effect"
                android:id="@+id/electricity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:text="@string/electricity"
