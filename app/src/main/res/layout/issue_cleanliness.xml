<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/voter"
            android:layout_margin="8dp"
            android:padding="1dp"
            android:background="@drawable/linearlayout_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/small_image"
                android:layout_height="@dimen/small_image"
                android:layout_gravity="center"
                android:background="@color/greylight"
                android:src="@drawable/voter" />
            <TextView
                android:id="@+id/janta_issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="@dimen/issue_text_left_margin"
                android:layout_marginStart="@dimen/issue_text_left_margin"
                android:text="@string/clean_voter"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/neta"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:padding="1dp"
            android:background="@drawable/linearlayout_border"
            android:layout_below="@id/voter"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/small_image"
                android:layout_height="@dimen/small_image"
                android:layout_gravity="center"
                android:background="@color/greylight"
                android:src="@drawable/politician_illustration" />
            <TextView
                android:id="@+id/parshad_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/issue_text_left_margin"
                android:layout_marginStart="@dimen/issue_text_left_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/clean_neta"
                android:textColor="@color/black" />
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/neta"
            android:text="@string/switchText"
            android:layout_margin="20dp"
            android:gravity="center"
            android:theme="@style/SwitchColor"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>
</ScrollView>