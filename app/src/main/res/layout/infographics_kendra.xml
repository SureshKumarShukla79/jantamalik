<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/grid_kendra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:layout_margin="1dp"
        android:columnCount="3"
        android:rowCount="3">

        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/tax_image"
                android:layout_height="@dimen/tax_image"
                android:scaleType="centerInside"
                android:src="@drawable/voter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/voter" />
        </LinearLayout>

        <ImageView
            android:layout_row="0"
            android:layout_column="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/colorAccent"
            android:layout_gravity="center"
                android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_forward_black_24dp" />

        <LinearLayout
            android:backgroundTint="@color/colorPrimary"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/tax_image"
                android:layout_height="@dimen/tax_image"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:src="@drawable/politician_illustration" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/MP" />
        </LinearLayout>

        <ImageView
            android:layout_row="1"
            android:layout_column="2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
            android:layout_gravity="center"
                android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_downward_black_24dp" />

        <LinearLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/dotted_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="@dimen/tax_image"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:src="@drawable/loksabha" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/loksabha" />
        </LinearLayout>

        <ImageView
            android:layout_row="2"
            android:layout_column="1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
            android:rotation="180"
            android:layout_gravity="center"
                android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_forward_black_24dp" />

        <LinearLayout
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/tax_image"
                android:layout_height="@dimen/tax_image"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:src="@drawable/govt" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/government_kendra" />
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:layout_below="@+id/grid_kendra"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dotted_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/saansad_is_key" />
    </LinearLayout>

</RelativeLayout>