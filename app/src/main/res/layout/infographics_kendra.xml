<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/VoteMP_scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/a1"
                android:layout_width="@dimen/tax_image"
                android:layout_height="@dimen/tax_image"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/voter" />
            <TextView
                android:id="@+id/a2"
                android:layout_below="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/voter" />
            <ImageButton
                android:id="@+id/a3"
                android:layout_below="@+id/a2"
                android:layout_marginTop="@dimen/arrow_tail_gap"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
                android:rotation="135"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_tilted_24px" />

            <ImageButton
                android:id="@+id/a4"
                android:layout_below="@+id/a3"
                android:layout_width="@dimen/tax_image"
                android:layout_height="@dimen/tax_image"
                android:layout_row="3"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/politician_illustration" />
            <TextView
                android:id="@+id/a5"
                android:layout_below="@+id/a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/MP" />
            <ImageButton
                android:id="@+id/a6"
                android:layout_below="@+id/a5"
                android:layout_marginTop="@dimen/arrow_tail_gap"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
                android:rotation="135"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_tilted_24px" />

            <ImageButton
                android:id="@+id/a7"
                android:layout_below="@+id/a6"
                android:layout_width="200dp"
                android:layout_height="@dimen/tax_image"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/loksabha" />
            <TextView
                android:id="@+id/a8"
                android:layout_below="@+id/a7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/loksabha" />
            <ImageButton
                android:id="@+id/a9"
                android:layout_below="@+id/a8"
                android:layout_marginTop="@dimen/arrow_tail_gap"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
                android:rotation="135"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_tilted_24px" />

            <ImageButton
                android:id="@+id/a10"
                android:layout_below="@+id/a9"
                android:layout_width="90dp"
                android:layout_height="@dimen/tax_image"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/govt" />
            <TextView
                android:id="@+id/a11"
                android:layout_below="@+id/a10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/government_kendra" />

    </RelativeLayout>
</ScrollView>