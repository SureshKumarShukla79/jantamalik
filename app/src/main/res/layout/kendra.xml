<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    tools:context="in.filternet.jantamalik.Kendra.VoteMP">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/infographics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:background="@drawable/recyclerview_item_click_effect"
                android:src="@drawable/rights" />
            <TextView
                android:id="@+id/govt1"
                android:background="@drawable/recyclerview_item_click_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1.00"
                android:padding="12dp"
                android:text="@string/democracy"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/govt2"
                android:background="@drawable/recyclerview_item_click_effect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|end"
                android:src="@drawable/right_black_arrow_24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/responsibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/recyclerview_item_click_effect"
                android:scaleType="centerInside"
                android:src="@drawable/responsibility" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recyclerview_item_click_effect"
                android:layout_gravity="center"
                android:layout_weight="1.00"
                android:text="@string/Center_Subjects"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/kendra_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|end"
                android:background="@drawable/recyclerview_item_click_effect"
                android:src="@drawable/right_black_arrow_24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom">
                <ImageView
                    android:id="@+id/note1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/note" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1.00"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/Money" />
                    <TextView
                        android:id="@+id/note2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:text="@string/kendra_budget_simple"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/note3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/right_black_arrow_24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:id="@+id/vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vote1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/vote" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/Vote" />
                    <TextView
                        android:id="@+id/vote2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/recyclerview_item_click_effect"
                        android:text="@string/MP"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/vote3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/right_black_arrow_24dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="3dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/election_2019_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/chair" />

            <TextView
                android:background="@drawable/recyclerview_item_click_effect"
                android:id="@+id/election_2019"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:text="@string/election_2019"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:background="@drawable/recyclerview_item_click_effect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_black_arrow_24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:src="@drawable/share"
            android:onClick="onclick_share_button"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/very_good"
            android:layout_margin="1dp"
            android:textColor="@color/colorAccent"
            android:onClick="onclick_open_donate"
            android:background="@drawable/button_styling"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>