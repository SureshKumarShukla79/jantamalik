<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="in.filternet.jantamalik.Kendra.VoteMP">

    <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>

    <Spinner
        android:id="@+id/state_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/state_text"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/constituency_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/constitunecy_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:layout_below="@id/state_text"
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="35dp"/>

    <Spinner
        android:id="@+id/MP_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/constituency_text"
        android:layout_toRightOf="@id/constituency_text" />

    <android.support.v7.widget.CardView
        android:id="@+id/voteCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/constituency_text"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="40dp"
                android:text="@string/Vote"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom">
                <ImageButton
                    android:id="@+id/vote1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/vote" />
                <Button
                    android:id="@+id/vote2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:gravity="left|bottom"
                    android:padding="10dp"
                    android:text="@string/MP"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
                <ImageButton
                    android:id="@+id/vote3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/right_black_arrow_24dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/noteCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voteCard"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="40dp"
                android:text="@string/Money"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom">
                <ImageButton
                    android:id="@+id/note1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/note" />
                <Button
                    android:id="@+id/note2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:gravity="left|bottom"
                    android:padding="10dp"
                    android:text="@string/kendra_budget"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
                <ImageButton
                    android:id="@+id/note3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/recyclerview_item_click_effect"
                    android:src="@drawable/right_black_arrow_24dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>