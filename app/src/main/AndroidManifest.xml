<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.filternet.jantamalik">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="in.filternet.jantamalik.MainApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">

        <activity
            android:name="in.filternet.jantamalik.MainActivity"
            android:theme="@style/AppTheme_NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.filternet.jantamalik.DonateActivityJava.donate"
            android:parentActivityName="in.filternet.jantamalik.MainActivity" />
        <activity
            android:name="in.filternet.jantamalik.Kendra.VoteMP"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name="in.filternet.jantamalik.Kendra.TaxKendra"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name="in.filternet.jantamalik.IssuesJava.IssuesItem"
            android:parentActivityName="in.filternet.jantamalik.MainActivity" />
        <activity
            android:name="in.filternet.jantamalik.Contact"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:excludeFromRecents="true"
            android:label="@string/contact"
            android:parentActivityName="in.filternet.jantamalik.MainActivity" />
        <activity android:name=".infographics"
            android:parentActivityName=".Kendra.VoteMP"></activity>
        <receiver
            android:name="in.filternet.jantamalik.Receiver"
            android:directBootAware="true">
            <intent-filter android:priority="99">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.DATE_CHANGED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>